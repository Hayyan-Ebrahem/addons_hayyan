<?xml version="1.0" encoding="utf-8"?>
<odoo>

   <record id="report_sheetanalysis_view" model="ir.ui.view">
        <field name="name">Sales Advertising Report</field>
        <field name="model">balance.sheet.analysis.report</field>
        <field name="arch" type="xml">
     <field name="target_move" position="before">
                <field name="account_report_id" domain="[('parent_id','=',False)]"/>
            </field>
            <field name="target_move" position="after">
                <field name="enable_filter"/>
                <field name="debit_credit" attrs="{'invisible': [('enable_filter','=',True)]}"/>
            </field>
            <field name="journal_ids" position="after">
                <notebook tabpos="up" colspan="4">
                    <page string="Comparison" name="comparison" attrs="{'invisible': [('enable_filter','=',False)]}">
                        <group>
                            <field name="label_filter" attrs="{'required': [('enable_filter', '=', True)]}"/>
                            <field name="filter_cmp"/>
                        </group>
                        <group string="Dates" attrs="{'invisible':[('filter_cmp', '!=', 'filter_date')]}">
                            <field name="date_from_cmp" attrs="{'required':[('filter_cmp', '=', 'filter_date')]}"/>
                            <field name="date_to_cmp" attrs="{'required':[('filter_cmp', '=', 'filter_date')]}"/>
                        </group>
                    </page>
                </notebook>
            </field>
            
        </field>
    </record>


    <record id="action_balance_sheet_analysis" model="ir.actions.act_window">
        <field name="name">Balance Sheet Analysis</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">balance.sheet.analysis.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="report_sheetanalysis_view"/>
        <field name="target">new</field>
        <field name="context" eval="{'default_account_report_id':ref('account.account_financial_report_balancesheet0')}"/>

    </record>

 

    <menuitem id="balance_sheet_analysis"
        name="Balance Sheet Analysis"
        parent="account.menu_finance_legal_statement" 
        action="action_balance_sheet_analysis"/>

 
</odoo>
